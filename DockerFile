# Étape 1 : build
FROM golang:1.25-alpine AS builder
RUN apk add --no-cache git
WORKDIR /app
COPY . .
RUN go build -o healthtrack ./cmd/main.go
# Étape 2 : exécution
FROM alpine:latest

WORKDIR /app

RUN apk add --no-cache ca-certificates

COPY --from=builder /app/main .

#COPY .env .env

EXPOSE 8080
CMD ["./healthtrack"]
